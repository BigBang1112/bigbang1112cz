@page
@model BigBang1112cz.Pages.Trackmania.Manialink.TMF.BigBang1112Model
@{
    Layout = "_ManialinkTmfLayout";
}

<frame posn="0 0 0">
    <quad posn="0 0 -1" sizen="128 96" image="https://@(Request.Host)/trackmania/manialink/tmf/background.jpg" halign="center" valign="center" />

    <quad posn="-60 44 0" sizen="44 88" style="Bgs1InRace" substyle="BgWindow3" />
    <quad posn="-12 44 0" sizen="72 88" style="Bgs1InRace" substyle="BgWindow3" />
    <quad posn="-56 41 1" sizen="36 9" image="https://@(Request.Host)/trackmania/manialink/tmf/bigbang1112.png" />
    <label posn="-45 34 1" scale="1.5" text="$f0f$s$ihorny collection" />

    <label posn="-56 28 1" sizen="36 8" text="$sNot a sex shop but a place of many fancy dope tasty horns. Professionally sound-designed as expected." autonewline="1" />

    <label posn="-38 16 1" scale="2" text="$s$ff0$o10cc" halign="center" />
    <label posn="-38 10 1" text="$s$ff0$oEACH" halign="center" />

    <quad posn="-38 2 1" sizen="38 6" style="Bgs1InRace" substyle="BgIconBorder" halign="center" valign="center" manialink="@Model.ManialinkUrl("bigbang1112:bulk")?fromp=@(Model.PageNum)&amp;locatorhost=@Model.LocatorHost" addplayerid="1" />
    <label posn="-38 2 2" sizen="34 6" text="$o$00010 RANDOM for 50cc" halign="center" valign="center" />

    <quad posn="-24 -36 1" sizen="6 6" style="Icons64x64_1" substyle="ArrowNext" halign="center" valign="center" manialink="@Model.ManialinkUrl("bigbang1112")?p=@(Model.NextPageNum)&amp;locatorhost=@Model.LocatorHost" />
    <quad posn="-52 -36 1" sizen="6 6" style="Icons64x64_1" substyle="ArrowPrev" halign="center" valign="center" manialink="@Model.ManialinkUrl("bigbang1112")?p=@(Model.PrevPageNum)&amp;locatorhost=@Model.LocatorHost" />
    <label posn="-38 -36 2" sizen="34 6" text="$o@(Model.PageNum)/@(Model.MaxPageNum)" halign="center" valign="center" />

    <label posn="-56 -5" style="TextCardRaceRank" text="$oTotal downloads: @Model.DownloadTotalCount" sizen="40 5" scale="0.5" />
    <label posn="-56 -8" style="TextCardRaceRank" text="$oTotal comments: @Model.CommentTotalCount" sizen="40 5" scale="0.5" />

    <label posn="-38 -13 1" sizen="36 8" text="$oLOCATOR HOST" halign="center" />
    <quad posn="-47.5 -20 1" sizen="19 6" style="Bgs1InRace" substyle="NavButton" halign="center" valign="center" />
    <label posn="-47.5 -20 2" sizen="19 6" text="$o$888BigBang1112" halign="center" valign="center" scale="0.9" />
    <quad posn="-28.5 -20 1" sizen="19 6"
          halign="center" valign="center"
          style="@(Model.LocatorHost == HostType.GitHub ? "BgsPlayerCard" : "Bgs1InRace")"
          substyle="@(Model.LocatorHost == HostType.GitHub ? "BgRacePlayerName" : "NavButton")"
          manialink="@Model.ManialinkUrl("bigbang1112")?p=@(Model.PageNum)&amp;locatorhost=GitHub" />
    <label posn="-28.5 -20 2" sizen="19 6" text="@(Model.LocatorHost == HostType.GitHub ? "$FFF" : "$BBB")$oGitHub" halign="center" valign="center" />
    <quad posn="-47.5 -26 1" sizen="19 6"
          halign="center" valign="center"
          style="@(Model.LocatorHost == HostType.Dashmap ? "BgsPlayerCard" : "Bgs1InRace")"
          substyle="@(Model.LocatorHost == HostType.Dashmap ? "BgRacePlayerName" : "NavButton")"
          manialink="@Model.ManialinkUrl("bigbang1112")?p=@(Model.PageNum)&amp;locatorhost=Dashmap" />
    <label posn="-47.5 -26 2" sizen="19 6" text="@(Model.LocatorHost == HostType.Dashmap ? "$FFF" : "$BBB")$oDashmap" halign="center" valign="center" />
    <quad posn="-28.5 -26 1" sizen="19 6"
          halign="center" valign="center"
          style="@(Model.LocatorHost == HostType.ManiaCDN ? "BgsPlayerCard" : "Bgs1InRace")"
          substyle="@(Model.LocatorHost == HostType.ManiaCDN ? "BgRacePlayerName" : "NavButton")"
          manialink="@Model.ManialinkUrl("bigbang1112")?p=@(Model.PageNum)&amp;locatorhost=ManiaCDN" />
    <label posn="-28.5 -26 2" sizen="19 6" text="@(Model.LocatorHost == HostType.ManiaCDN ? "$FFF" : "$BBB")$oManiaCDN" halign="center" valign="center" />

    @for (var i = 0; i < Model.Horns.Count; i++)
    {
        var horn = Model.Horns[i];
        const int tileWidth = 64;
        const int tileHeight = 8;

        <quad posn="@(tileWidth - 72) @( -i * tileHeight + 40) 1" sizen="@(tileWidth) @(tileHeight)" style="Bgs1InRace" substyle="BgWindow1" />
        <audio posn="@(tileWidth - 72) @( -i * tileHeight + 40) 1" data="@HornLocatorHost.GetUrl(Request, Model.LocatorHost, horn.Name)" looping="0" sizen="@(tileHeight) @(tileHeight)" />
        <label posn="@(tileWidth - 64) @( -i * tileHeight + 36) 2" valign="center" style="TextCardRaceRank" text="@horn.Name@(horn.IsNew ? " $n$ff0NEW" : "")" sizen="32 5" scale="0.75" />
        <label posn="@(tileWidth - 36) @( -i * tileHeight + 36) 2" valign="center" style="TextCardRaceRank" text="@(horn.Duration.TotalSeconds.ToString("0.00"))s" sizen="24 5" scale="0.5" />
        <label posn="@(tileWidth - 26) @( -i * tileHeight + 36) 2" valign="center" style="TextCardRaceRank" text="$o@(horn.CommentCount) comment@(horn.CommentCount == 1 ? "" : "s")" sizen="24 5" scale="0.5" manialink="@Model.ManialinkUrl("bigbang1112:comments")?horn=@(horn.Name)&amp;fromp=@(Model.PageNum)&amp;locatorhost=@Model.LocatorHost" />
        <quad posn="@(tileWidth - 12) @( -i * tileHeight + 40) 2" sizen="@(tileHeight) @(tileHeight)" halign="center" style="Icons128x128_1" substyle="Manialink" manialink="@Model.ManialinkUrl("bigbang1112:download")?horn=@(horn.Name)&amp;fromp=@(Model.PageNum)&amp;locatorhost=@(Model.LocatorHost)" addplayerid="1" />
    }
</frame>