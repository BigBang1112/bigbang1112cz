@page
@model BigBang1112cz.Pages.Trackmania.Manialink.TMF.ConfirmDownloadModel
@{
    Layout = "_ManiacodeLayout";
}

<install_skin>
    <name>@Model.Horn</name>
    <file>Skins/Horns/@Model.Horn</file>
    <url>@HornLocatorHost.GetUrl(Request, Model.LocatorHost, Model.Horn)</url>
</install_skin>
<show_message>
    @if (Model.DownloadCount == 0)
    {
        <message>Thanks for downloading, @(Model.Nickname)$z! You're the first to download this horn! :D</message>
    }
    else if (Model.DownloadCount == 1)
    {
        <message>Thanks for downloading, @(Model.Nickname)$z! The horn was downloaded only once before! :D</message>
    }
    else
    {
        <message>Thanks for downloading, @(Model.Nickname)$z! The horn was downloaded @Model.DownloadCount times already! :D</message>
    }
</show_message>
<goto>
    <link>@(Model.ManialinkUrl("bigbang1112"))?p=@(Model.FromPageNum)&amp;locatorhost=@(Model.LocatorHost)</link>
</goto>