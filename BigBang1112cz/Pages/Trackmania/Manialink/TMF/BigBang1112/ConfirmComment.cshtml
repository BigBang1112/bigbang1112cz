@page
@model BigBang1112cz.Pages.Trackmania.Manialink.TMF.BigBang1112.ConfirmCommentModel
@{
    Layout = "_ManiacodeLayout";
}

<show_message>
    @if (string.IsNullOrWhiteSpace(Model.Message))
    {
        <message>Something went wrong posting the message. Sorry for the scam :(</message>
    }
    else
    {
        <message>@Model.Message</message>
    }
</show_message>
<goto>
    <link>@(Model.ManialinkUrl("bigbang1112:comments"))?horn=@(Model.Horn)&amp;fromp=@(Model.FromPageNum)&amp;commentp=1&amp;locatorhost=@(Model.LocatorHost)</link>
</goto>